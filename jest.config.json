{
  "testEnvironment": "jsdom",
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|webp|svg)$": "<rootDir>/__mocks__/fileMock.js"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/setupTests.js"
  ],
  "moduleFileExtensions": [
    "js",
    "jsx",
    "ts",
    "tsx",
    "json",
    "node"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest",
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ]
}